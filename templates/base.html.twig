<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Le blog de Vincent{% endblock %}</title>
    {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
</head>
<body>
{% include('_navbar.html.twig') %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success mb-0 px-0 text-center">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('warning') %}
    <div class="alert alert-danger mb-0 px-0 text-center">
        {{ message }}
    </div>
{% endfor %}


{% block body %}{% endblock %}
{% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
</body>
</html>
