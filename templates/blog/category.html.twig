{# templates/blog/show.html.twig #}
{% extends 'visitorLayout.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div>
        <h2 class="text-center my-3">Articles de la catégorie {{ category.name }}</h2>
        <ul class="list-group text-center">
            {% for article in articles %}
                <li class="list-group-item list-group-item-dark">
                    <a href="{{ path('blog_show', {'slug': article.slug}) }}">{{ article.title }}</a>
                </li>
            {% else %}
                <li>Cet article n'est lié à aucun tag.</li>
            {% endfor %}
        </ul>
    </div>
    <div class="text-center my-2">
    <a href="{{ path('blog_index') }}">Retour à l'accueil</a>
    </div>
{% endblock %}