{# templates/blog/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
{% for article in articles %}
    <div>
        <h1>{{ article.id }}</h1>
        <h2>Real article s title : {{ article.title }}</h2>
        <p>{{ article.content }}</p>
    </div>
{% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>

{% endblock %}